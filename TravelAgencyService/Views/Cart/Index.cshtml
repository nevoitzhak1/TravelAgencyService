@model TravelAgencyService.Models.ViewModels.CartViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container">
    <h1 class="mb-4"><i class="bi bi-cart"></i> Shopping Cart</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Info"] != null)
    {
        <div class="alert alert-info alert-dismissible fade show">
            @TempData["Info"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Items.Any())
    {
        <div class="row">
            <div class="col-md-8">
                @foreach (var item in Model.Items)
                {
                    <div class="card mb-3 @(!item.IsStillAvailable ? "border-danger" : "")">
                        <div class="row g-0">
                            <div class="col-md-3">
                                @if (!string.IsNullOrEmpty(item.MainImageUrl))
                                {
                                    <img src="@item.MainImageUrl" class="img-fluid rounded-start h-100"
                                         style="object-fit: cover;" alt="@item.PackageName">
                                }
                                else
                                {
                                    <div class="bg-secondary h-100 d-flex align-items-center justify-content-center rounded-start"
                                         style="min-height: 150px;">
                                        <i class="bi bi-image text-white fs-1"></i>
                                    </div>
                                }
                            </div>
                            <div class="col-md-9">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between">
                                        <h5 class="card-title">
                                            <a asp-controller="Trip" asp-action="Details" asp-route-id="@item.TripId"
                                               class="text-decoration-none">
                                                @item.PackageName
                                            </a>
                                        </h5>
                                        <form asp-action="Remove" asp-route-id="@item.CartItemId" method="post">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-sm btn-outline-danger" title="Remove">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>

                                    @if (!item.IsStillAvailable)
                                    {
                                        <div class="alert alert-danger py-1 px-2 mb-2">
                                            <small><i class="bi bi-exclamation-triangle"></i> This trip is no longer available</small>
                                        </div>
                                    }

                                    <p class="card-text text-muted mb-1">
                                        <i class="bi bi-geo-alt"></i> @item.Destination, @item.Country
                                    </p>
                                    <p class="card-text text-muted mb-2">
                                        <i class="bi bi-calendar"></i>
                                        @item.StartDate.ToString("MMM dd") - @item.EndDate.ToString("MMM dd, yyyy")
                                    </p>

                                    <div class="row align-items-center">
                                        <div class="col-md-4">
                                            <form asp-action="UpdateQuantity" method="post" class="d-flex align-items-center">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="cartItemId" value="@item.CartItemId" />
                                                <label class="me-2">Rooms:</label>
                                                <select name="numberOfRooms" class="form-select form-select-sm" style="width: 80px;"
                                                        onchange="this.form.submit()">
                                                    @for (int i = 1; i <= Math.Min(item.AvailableRooms, 10); i++)
                                                    {
                                                        <option value="@i" selected="@(i == item.NumberOfRooms)">@i</option>
                                                    }
                                                </select>
                                            </form>
                                        </div>
                                        <div class="col-md-4">
                                            @if (item.IsOnSale)
                                            {
                                                <span class="text-decoration-line-through text-muted">$@item.OriginalPrice</span>
                                                <span class="text-danger">$@item.PricePerPerson</span>
                                            }
                                            else
                                            {
                                                <span>$@item.PricePerPerson / person</span>
                                            }
                                        </div>
                                        <div class="col-md-4 text-end">
                                            <span class="fs-5 fw-bold text-primary">$@item.TotalPrice</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

                <div class="d-flex justify-content-between">
                    <a asp-controller="Trip" asp-action="Index" class="btn btn-outline-primary">
                        <i class="bi bi-arrow-left"></i> Continue Shopping
                    </a>
                    <form asp-action="Clear" method="post">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger"
                                onclick="return confirm('Are you sure you want to clear your cart?')">
                            <i class="bi bi-trash"></i> Clear Cart
                        </button>
                    </form>
                </div>
            </div>

            <!-- Order Summary -->
            <div class="col-md-4">
                <div class="card shadow sticky-top" style="top: 20px;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="bi bi-receipt"></i> Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span>Items (@Model.TotalItems)</span>
                            <span>$@Model.TotalPrice</span>
                        </div>
                        <hr />
                        <div class="d-flex justify-content-between fw-bold fs-5 mb-3">
                            <span>Total</span>
                            <span class="text-primary">$@Model.TotalPrice</span>
                        </div>

                        @if (Model.Items.All(i => i.IsStillAvailable))
                        {
                            <div class="d-grid">
                                <a asp-action="Checkout" class="btn btn-success btn-lg">
                                    <i class="bi bi-credit-card"></i> Proceed to Checkout
                                </a>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-warning mb-0">
                                <small>Please remove unavailable items before checkout.</small>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="bi bi-cart-x fs-1 text-muted"></i>
            <h3 class="mt-3">Your cart is empty</h3>
            <p class="text-muted">Browse our trips and add some to your cart!</p>
            <a asp-controller="Trip" asp-action="Index" class="btn btn-primary">
                <i class="bi bi-search"></i> Browse Trips
            </a>
        </div>
    }
</div>