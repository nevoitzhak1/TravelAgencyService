@model TravelAgencyService.Models.ViewModels.WaitingListViewModel

@{
    ViewData["Title"] = "Waiting Lists";
    var groupedEntries = Model.Entries.GroupBy(e => e.TripId);
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1><i class="bi bi-hourglass-split"></i> Waiting Lists</h1>
        <span class="badge bg-warning text-dark fs-6">@Model.TotalEntries people waiting</span>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Entries.Any())
            {
                @foreach (var group in groupedEntries)
                {
                    var tripName = group.First().TripName;
                    <div class="card mb-3">
                        <div class="card-header bg-light">
                            <h5 class="mb-0">
                                <i class="bi bi-airplane"></i> @tripName
                                <span class="badge bg-primary">@group.Count() waiting</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>Position</th>
                                        <th>User</th>
                                        <th>Email</th>
                                        <th>Rooms Requested</th>
                                        <th>Joined</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var entry in group.OrderBy(e => e.Position))
                                    {
                                        <tr>
                                            <td>
                                                <span class="badge bg-secondary fs-6">#@entry.Position</span>
                                            </td>
                                            <td><strong>@entry.UserName</strong></td>
                                            <td>@entry.UserEmail</td>
                                            <td>@entry.RoomsRequested</td>
                                            <td>@entry.JoinedDate.ToString("MMM dd, yyyy")</td>
                                            <td>
                                                @if (entry.IsNotified)
                                                {
                                                    <span class="badge bg-info">Notified</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Waiting</span>
                                                }
                                            </td>
                                            <td>
                                                @if (!entry.IsNotified)
                                                {
                                                    <form asp-action="NotifyWaitingUser" asp-route-id="@entry.WaitingListEntryId"
                                                          method="post" class="d-inline">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-sm btn-primary"
                                                                title="Notify user that a room is available">
                                                            <i class="bi bi-bell"></i> Notify
                                                        </button>
                                                    </form>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">
                                                        <i class="bi bi-check-circle"></i> Notified
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-hourglass fs-1 text-muted"></i>
                    <h4 class="mt-3">No one on waiting lists</h4>
                    <p class="text-muted">All trips have available rooms or no one is waiting.</p>
                </div>
            }
        </div>
    </div>
</div>