@model TravelAgencyService.Models.ViewModels.TripEditViewModel

@{
    ViewData["Title"] = "Edit Trip";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="ManageTrips">Manage Trips</a></li>
            <li class="breadcrumb-item active">Edit Trip</li>
        </ol>
    </nav>

    <div class="card shadow">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="bi bi-pencil"></i> Edit Trip</h4>
            <span class="badge bg-light text-dark">ID: @Model.TripId</span>
        </div>
        <div class="card-body">
            <form asp-action="EditTrip" method="post">
                <input type="hidden" asp-for="TripId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Basic Info -->
                <h5 class="border-bottom pb-2 mb-3">Basic Information</h5>

                <div class="mb-3">
                    <label asp-for="PackageName" class="form-label"></label>
                    <input asp-for="PackageName" class="form-control" />
                    <span asp-validation-for="PackageName" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Destination" class="form-label"></label>
                        <input asp-for="Destination" class="form-control" />
                        <span asp-validation-for="Destination" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="Country" class="form-label"></label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <!-- Dates & Pricing -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Dates & Pricing</h5>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="StartDate" class="form-label"></label>
                        <input asp-for="StartDate" class="form-control" type="date" />
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="EndDate" class="form-label"></label>
                        <input asp-for="EndDate" class="form-control" type="date" />
                        <span asp-validation-for="EndDate" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Price" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text">$</span>
                            <input asp-for="Price" class="form-control" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="TotalRooms" class="form-label"></label>
                        <input asp-for="TotalRooms" class="form-control" type="number" />
                        <span asp-validation-for="TotalRooms" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="AvailableRooms" class="form-label"></label>
                        <input asp-for="AvailableRooms" class="form-control" type="number" min="0" />
                        <span asp-validation-for="AvailableRooms" class="text-danger"></span>
                        <small class="text-muted">Current available rooms for booking</small>
                    </div>
                </div>

                <!-- Package Details -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Package Details</h5>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="PackageType" class="form-label"></label>
                        <select asp-for="PackageType" class="form-select"
                                asp-items="Html.GetEnumSelectList<TravelAgencyService.Models.PackageType>()">
                        </select>
                        <span asp-validation-for="PackageType" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="MinimumAge" class="form-label"></label>
                        <input asp-for="MinimumAge" class="form-control" type="number" />
                        <span asp-validation-for="MinimumAge" class="text-danger"></span>
                    </div>
                    <div class="col-md-4 mb-3">
                        <label asp-for="MaximumAge" class="form-label"></label>
                        <input asp-for="MaximumAge" class="form-control" type="number" />
                        <span asp-validation-for="MaximumAge" class="text-danger"></span>
                    </div>
                </div>

                <!-- Image & Settings -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Image & Settings</h5>

                <div class="mb-3">
                    <label asp-for="MainImageUrl" class="form-label"></label>
                    <input asp-for="MainImageUrl" class="form-control" />
                    <span asp-validation-for="MainImageUrl" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="LastBookingDate" class="form-label"></label>
                        <input asp-for="LastBookingDate" class="form-control" type="date" />
                        <span asp-validation-for="LastBookingDate" class="text-danger"></span>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label asp-for="CancellationDaysLimit" class="form-label"></label>
                        <div class="input-group">
                            <input asp-for="CancellationDaysLimit" class="form-control" type="number" />
                            <span class="input-group-text">days</span>
                        </div>
                        <span asp-validation-for="CancellationDaysLimit" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 form-check">
                    <input asp-for="IsVisible" class="form-check-input" />
                    <label asp-for="IsVisible" class="form-check-label">
                        Make this trip visible to users
                    </label>
                </div>

                <!-- Stats (Read Only) -->
                <h5 class="border-bottom pb-2 mb-3 mt-4">Statistics</h5>
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>Times Booked:</strong> @Model.TimesBooked</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Created:</strong> @Model.CreatedAt.ToString("MMM dd, yyyy")</p>
                    </div>
                </div>

                @* ===================== Reminders (Email) ===================== *@
                <h5 class="border-bottom pb-2 mb-3 mt-4">Reminders (Email)</h5>
                <p class="text-muted small mb-2">
                    Add multiple reminders (e.g., 7 days before, 1 month before). They will be emailed to all users who booked this trip.
                </p>

                <div id="remindersContainer">
                    @{
                        var hasExisting = Model.ReminderRules != null && Model.ReminderRules.Count > 0;
                        var count = hasExisting ? Model.ReminderRules.Count : 1;
                    }

                    @for (int i = 0; i < count; i++)
                    {
                        var rule = hasExisting ? Model.ReminderRules[i] : null;
                        var unit = rule == null ? "Days" : rule.OffsetUnit.ToString();

                        <div class="row align-items-end mb-2 reminder-row">
                            <input type="hidden"
                                   name="ReminderRules[@i].TripReminderRuleId"
                                   value="@(rule?.TripReminderRuleId?.ToString() ?? "")" />

                            <div class="col-md-4">
                                <label class="form-label">Amount</label>
                                <input class="form-control"
                                       name="ReminderRules[@i].OffsetAmount"
                                       type="number"
                                       min="1"
                                       value="@(rule?.OffsetAmount ?? 7)" />
                            </div>

                            <div class="col-md-4">
                                <label class="form-label">Unit</label>
                                <select class="form-select" name="ReminderRules[@i].OffsetUnit">
                                    <option value="Days" selected="@(unit == "Days")">Days</option>
                                    <option value="Months" selected="@(unit == "Months")">Months</option>
                                </select>
                            </div>

                            <div class="col-md-3">
                                <label class="form-label">Active</label>
                                <input class="form-check-input ms-2"
                                       type="checkbox"
                                       name="ReminderRules[@i].IsActive"
                                       value="true"
                                       @((rule?.IsActive ?? true) ? "checked" : "") />
                            </div>

                            <div class="col-md-1 text-end">
                                <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeReminderRow(this)">
                                    X
                                </button>
                            </div>
                        </div>
                    }
                </div>

                <button type="button" class="btn btn-outline-primary btn-sm mt-2" onclick="addReminderRow()">
                    <i class="bi bi-plus"></i> Add reminder
                </button>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                    <a asp-action="ManageTrips" class="btn btn-outline-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function addReminderRow() {
            const container = document.getElementById("remindersContainer");
            if (!container) return;

            const index = container.querySelectorAll(".reminder-row").length;

            const div = document.createElement("div");
            div.className = "row align-items-end mb-2 reminder-row";
            div.innerHTML = `
                <input type="hidden" name="ReminderRules[${index}].TripReminderRuleId" value="" />

                <div class="col-md-4">
                    <label class="form-label">Amount</label>
                    <input class="form-control" name="ReminderRules[${index}].OffsetAmount" type="number" min="1" value="7" />
                </div>

                <div class="col-md-4">
                    <label class="form-label">Unit</label>
                    <select class="form-select" name="ReminderRules[${index}].OffsetUnit">
                        <option value="Days" selected>Days</option>
                        <option value="Months">Months</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label">Active</label>
                    <input class="form-check-input ms-2" type="checkbox" name="ReminderRules[${index}].IsActive" value="true" checked />
                </div>

                <div class="col-md-1 text-end">
                    <button type="button" class="btn btn-outline-danger btn-sm" onclick="removeReminderRow(this)">X</button>
                </div>
            `;
            container.appendChild(div);
        }

        function removeReminderRow(btn) {
            const row = btn.closest(".reminder-row");
            row.remove();
            reindexReminderRows();
        }

        function reindexReminderRows() {
            const rows = document.querySelectorAll("#remindersContainer .reminder-row");
            rows.forEach((row, i) => {
                row.querySelectorAll("input, select").forEach(el => {
                    const name = el.getAttribute("name");
                    if (!name) return;
                    el.setAttribute("name", name.replace(/ReminderRules\[\d+\]/g, `ReminderRules[${i}]`));
                });
            });
        }
    </script>
}
