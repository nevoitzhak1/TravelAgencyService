@model TravelAgencyService.Models.Trip

@{
    ViewData["Title"] = "Delete Trip";
    var canDelete = (bool)(ViewBag.CanDelete ?? true);
    var bookingsCount = (int)(ViewBag.BookingsCount ?? 0);
    var waitingListCount = (int)(ViewBag.WaitingListCount ?? 0);
    var reviewsCount = (int)(ViewBag.ReviewsCount ?? 0);
    var cartItemsCount = (int)(ViewBag.CartItemsCount ?? 0);
    var totalDependencies = (int)(ViewBag.TotalDependencies ?? 0);
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Dashboard">Dashboard</a></li>
            <li class="breadcrumb-item"><a asp-action="ManageTrips">Manage Trips</a></li>
            <li class="breadcrumb-item active">Delete Trip</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-trash"></i> Delete Trip
                    </h4>
                </div>
                <div class="card-body">
                    @if (!canDelete)
                    {
                        <!-- CANNOT DELETE - HAS BOOKINGS -->
                        <div class="alert alert-danger" role="alert">
                            <h5 class="alert-heading">
                                <i class="bi bi-exclamation-triangle-fill"></i> Cannot Delete This Trip
                            </h5>
                            <p>
                                This trip cannot be deleted because it has <strong>@bookingsCount active booking(s)</strong>.
                            </p>
                            <hr>
                            <p class="mb-0">
                                <strong>What to do instead:</strong>
                            </p>
                            <ul class="mb-0">
                                <li>Hide the trip by setting it to "Not Visible" in Edit Trip</li>
                                <li>Wait until all bookings are completed, then delete</li>
                                <li>Contact users to cancel their bookings first</li>
                            </ul>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header">
                                <strong>Trip Details</strong>
                            </div>
                            <div class="card-body">
                                <div class="row mb-2">
                                    <div class="col-md-4"><strong>Package Name:</strong></div>
                                    <div class="col-md-8">@Model.PackageName</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-4"><strong>Destination:</strong></div>
                                    <div class="col-md-8">@Model.Destination, @Model.Country</div>
                                </div>
                                <div class="row mb-2">
                                    <div class="col-md-4"><strong>Dates:</strong></div>
                                    <div class="col-md-8">@Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                        </div>

                        <div class="card mb-3">
                            <div class="card-header bg-warning">
                                <strong>Dependencies (Why deletion is blocked)</strong>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-calendar-check"></i> Bookings</span>
                                        <span class="badge bg-danger rounded-pill">@bookingsCount</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-clock-history"></i> Waiting List</span>
                                        <span class="badge bg-secondary rounded-pill">@waitingListCount</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-star"></i> Reviews</span>
                                        <span class="badge bg-secondary rounded-pill">@reviewsCount</span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span><i class="bi bi-cart"></i> Cart Items</span>
                                        <span class="badge bg-secondary rounded-pill">@cartItemsCount</span>
                                    </li>
                                </ul>
                                <p class="mt-3 mb-0">
                                    <small class="text-muted">
                                        <i class="bi bi-info-circle"></i>
                                        Waiting list, reviews, and cart items will be deleted automatically.
                                        Bookings must be handled manually first.
                                    </small>
                                </p>
                            </div>
                        </div>

                        <div class="d-grid gap-2">
                            <a asp-action="EditTrip" asp-route-id="@Model.TripId" class="btn btn-warning btn-lg">
                                <i class="bi bi-pencil"></i> Edit Trip Instead
                            </a>
                            <a asp-action="ManageTrips" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Trips
                            </a>
                        </div>
                    }
                    else
                    {
                        <!-- CAN DELETE - NO BOOKINGS -->
                        @if (totalDependencies > 0)
                        {
                            <div class="alert alert-warning" role="alert">
                                <h5 class="alert-heading">
                                    <i class="bi bi-exclamation-triangle"></i> Warning: This trip has related data
                                </h5>
                                <p>Deleting this trip will also delete:</p>
                                <ul>
                                    @if (waitingListCount > 0)
                                    {
                                        <li>@waitingListCount waiting list entry/entries</li>
                                    }
                                    @if (reviewsCount > 0)
                                    {
                                        <li>@reviewsCount review(s)</li>
                                    }
                                    @if (cartItemsCount > 0)
                                    {
                                        <li>@cartItemsCount cart item(s)</li>
                                    }
                                </ul>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-success" role="alert">
                                <i class="bi bi-check-circle"></i> This trip has no related data and is safe to delete.
                            </div>
                        }

                        <div class="card mb-3">
                            <div class="card-header bg-light">
                                <strong>Trip to Delete</strong>
                            </div>
                            <div class="card-body">
                                @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                                {
                                    <img src="@Model.MainImageUrl" alt="@Model.PackageName" class="img-fluid rounded mb-3" style="max-height: 200px; object-fit: cover; width: 100%;" />
                                }

                                <dl class="row mb-0">
                                    <dt class="col-sm-4">Package Name</dt>
                                    <dd class="col-sm-8">@Model.PackageName</dd>

                                    <dt class="col-sm-4">Destination</dt>
                                    <dd class="col-sm-8">@Model.Destination, @Model.Country</dd>

                                    <dt class="col-sm-4">Dates</dt>
                                    <dd class="col-sm-8">
                                        @Model.StartDate.ToString("MMM dd, yyyy") - @Model.EndDate.ToString("MMM dd, yyyy")
                                        <span class="badge bg-info">@Model.TripDurationDays days</span>
                                    </dd>

                                    <dt class="col-sm-4">Price</dt>
                                    <dd class="col-sm-8">
                                        $@Model.Price.ToString("N2")
                                        @if (Model.IsOnSale && Model.OriginalPrice.HasValue)
                                        {
                                            <span class="text-muted"><s>$@Model.OriginalPrice.Value.ToString("N2")</s></span>
                                        }
                                    </dd>

                                    <dt class="col-sm-4">Total Rooms</dt>
                                    <dd class="col-sm-8">@Model.TotalRooms</dd>

                                    <dt class="col-sm-4">Package Type</dt>
                                    <dd class="col-sm-8">
                                        <span class="badge bg-primary">@Model.PackageType</span>
                                    </dd>

                                    <dt class="col-sm-4">Times Booked</dt>
                                    <dd class="col-sm-8">@Model.TimesBooked</dd>

                                    <dt class="col-sm-4">Created</dt>
                                    <dd class="col-sm-8">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>
                                </dl>
                            </div>
                        </div>

                        <div class="alert alert-danger" role="alert">
                            <strong><i class="bi bi-exclamation-triangle-fill"></i> Are you absolutely sure?</strong>
                            <p class="mb-0 mt-2">This action cannot be undone. The trip will be permanently deleted.</p>
                        </div>

                        <form asp-action="DeleteTrip" method="post">
                            <input type="hidden" asp-for="TripId" />
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-danger btn-lg" onclick="return confirm('Are you ABSOLUTELY SURE you want to delete this trip? This action cannot be undone!');">
                                    <i class="bi bi-trash"></i> Yes, Delete This Trip Permanently
                                </button>
                                <a asp-action="ManageTrips" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> No, Cancel
                                </a>
                            </div>
                        </form>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
