@model TravelAgencyService.Models.ViewModels.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<style>
    .profile-header {
        background: linear-gradient(135deg, #1e3c72 0%, #2a5298 50%, #1e3c72 100%);
        border-radius: 20px;
        padding: 40px;
        color: white;
        position: relative;
        overflow: hidden;
        margin-bottom: 30px;
    }

        .profile-header::before {
            content: '';
            position: absolute;
            top: -50%;
            right: -50%;
            width: 100%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            pointer-events: none;
        }

    .profile-avatar {
        width: 120px;
        height: 120px;
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
        font-weight: bold;
        color: white;
        border: 4px solid rgba(255,255,255,0.3);
        box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .profile-name {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 5px;
    }

    .profile-email {
        opacity: 0.85;
        font-size: 1.1rem;
    }

    .member-badge {
        background: rgba(255,255,255,0.2);
        padding: 8px 16px;
        border-radius: 20px;
        font-size: 0.9rem;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        margin-top: 15px;
    }

    .stat-card {
        background: white;
        border-radius: 16px;
        padding: 25px;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(0,0,0,0.05);
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.12);
        }

    .stat-icon {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 15px;
        font-size: 24px;
    }

        .stat-icon.bookings {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
        }

        .stat-icon.completed {
            background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
            color: white;
        }

        .stat-icon.upcoming {
            background: linear-gradient(135deg, #fc4a1a 0%, #f7b733 100%);
            color: white;
        }

        .stat-icon.reviews {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }

    .stat-number {
        font-size: 2.5rem;
        font-weight: 700;
        color: #1e3c72;
        line-height: 1;
    }

    .stat-label {
        color: #6c757d;
        font-size: 0.95rem;
        margin-top: 5px;
    }

    .info-card {
        background: white;
        border-radius: 16px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        border: 1px solid rgba(0,0,0,0.05);
        overflow: hidden;
    }

    .info-card-header {
        background: #f8f9fa;
        padding: 20px 25px;
        border-bottom: 1px solid rgba(0,0,0,0.05);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .info-card-header h5 {
            margin: 0;
            font-weight: 600;
            color: #1e3c72;
        }

    .info-card-body {
        padding: 25px;
    }

    .info-row {
        display: flex;
        padding: 15px 0;
        border-bottom: 1px solid #f0f0f0;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        width: 140px;
        color: #6c757d;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .info-value {
        flex: 1;
        color: #333;
        font-weight: 500;
    }

    .btn-edit {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        padding: 10px 20px;
        border-radius: 10px;
        color: white;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-edit:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
        }

    .btn-password {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        border: none;
        padding: 10px 20px;
        border-radius: 10px;
        color: white;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .btn-password:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(240, 147, 251, 0.4);
            color: white;
        }

    .quick-actions {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
    }

    .quick-action-btn {
        flex: 1;
        min-width: 200px;
        padding: 20px;
        border-radius: 12px;
        border: 2px solid #e9ecef;
        background: white;
        text-decoration: none;
        color: #333;
        display: flex;
        align-items: center;
        gap: 15px;
        transition: all 0.3s ease;
    }

        .quick-action-btn:hover {
            border-color: #667eea;
            background: #f8f9ff;
            color: #333;
            transform: translateY(-3px);
        }

        .quick-action-btn i {
            font-size: 24px;
            color: #667eea;
        }

        .quick-action-btn span {
            font-weight: 500;
        }

    .alert-success-custom {
        background: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        color: white;
        border: none;
        border-radius: 12px;
        padding: 15px 20px;
    }
</style>

<div class="container py-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success-custom alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close btn-close-white" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Profile Header -->
    <div class="profile-header">
        <div class="row align-items-center">
            <div class="col-auto">
                <div class="profile-avatar">
                    @Model.FirstName[0]@Model.LastName[0]
                </div>
            </div>
            <div class="col">
                <h1 class="profile-name">@Model.FullName</h1>
                <p class="profile-email mb-0">
                    <i class="bi bi-envelope me-2"></i>@Model.Email
                </p>
                <div class="member-badge">
                    <i class="bi bi-calendar-check"></i>
                    Member since @Model.RegistrationDate.ToString("MMMM yyyy")
                </div>
            </div>
            <div class="col-auto">
                <a asp-action="EditProfile" class="btn btn-light btn-lg">
                    <i class="bi bi-pencil me-2"></i>Edit Profile
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics -->
    <div class="row g-4 mb-4">
        <div class="col-md-3 col-6">
            <div class="stat-card">
                <div class="stat-icon bookings">
                    <i class="bi bi-bookmark-check"></i>
                </div>
                <div class="stat-number">@Model.TotalBookings</div>
                <div class="stat-label">Total Bookings</div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="stat-card">
                <div class="stat-icon completed">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="stat-number">@Model.CompletedTrips</div>
                <div class="stat-label">Completed Trips</div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="stat-card">
                <div class="stat-icon upcoming">
                    <i class="bi bi-airplane"></i>
                </div>
                <div class="stat-number">@Model.UpcomingTrips</div>
                <div class="stat-label">Upcoming Trips</div>
            </div>
        </div>
        <div class="col-md-3 col-6">
            <div class="stat-card">
                <div class="stat-icon reviews">
                    <i class="bi bi-star"></i>
                </div>
                <div class="stat-number">@Model.TotalReviews</div>
                <div class="stat-label">Reviews Written</div>
            </div>
        </div>
    </div>

    <div class="row g-4">
        <!-- Personal Information -->
        <div class="col-lg-6">
            <div class="info-card h-100">
                <div class="info-card-header">
                    <h5><i class="bi bi-person me-2"></i>Personal Information</h5>
                    <a asp-action="EditProfile" class="btn btn-edit btn-sm">
                        <i class="bi bi-pencil me-1"></i>Edit
                    </a>
                </div>
                <div class="info-card-body">
                    <div class="info-row">
                        <div class="info-label">
                            <i class="bi bi-person-badge"></i> Full Name
                        </div>
                        <div class="info-value">@Model.FullName</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="bi bi-envelope"></i> Email
                        </div>
                        <div class="info-value">@Model.Email</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="bi bi-calendar"></i> Birthday
                        </div>
                        <div class="info-value">
                            @if (Model.DateOfBirth.HasValue)
                            {
                                @Model.DateOfBirth.Value.ToString("MMMM dd, yyyy")
                                <span class="text-muted ms-2">(@Model.Age years old)</span>
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="bi bi-geo-alt"></i> Address
                        </div>
                        <div class="info-value">
                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                @Model.Address
                            }
                            else
                            {
                                <span class="text-muted">Not specified</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Account Security -->
        <div class="col-lg-6">
            <div class="info-card h-100">
                <div class="info-card-header">
                    <h5><i class="bi bi-shield-lock me-2"></i>Account Security</h5>
                </div>
                <div class="info-card-body">
                    <div class="info-row">
                        <div class="info-label">
                            <i class="bi bi-key"></i> Password
                        </div>
                        <div class="info-value">
                            ••••••••••
                            <a asp-action="ChangePassword" class="btn btn-password btn-sm ms-3">
                                <i class="bi bi-pencil me-1"></i>Change
                            </a>
                        </div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="bi bi-clock"></i> Member Since
                        </div>
                        <div class="info-value">@Model.RegistrationDate.ToString("MMMM dd, yyyy")</div>
                    </div>
                    <div class="info-row">
                        <div class="info-label">
                            <i class="bi bi-check-circle"></i> Status
                        </div>
                        <div class="info-value">
                            <span class="badge bg-success">Active</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="mt-4">
        <h5 class="mb-3"><i class="bi bi-lightning me-2"></i>Quick Actions</h5>
        <div class="quick-actions">
            <a asp-controller="Booking" asp-action="MyBookings" class="quick-action-btn">
                <i class="bi bi-journal-bookmark"></i>
                <span>View My Bookings</span>
            </a>
            <a asp-controller="Trip" asp-action="Index" class="quick-action-btn">
                <i class="bi bi-search"></i>
                <span>Browse Trips</span>
            </a>
            <a asp-controller="Cart" asp-action="Index" class="quick-action-btn">
                <i class="bi bi-cart"></i>
                <span>View Cart</span>
            </a>
            <a asp-controller="Review" asp-action="Create" class="quick-action-btn">
                <i class="bi bi-star"></i>
                <span>Write a Review</span>
            </a>
        </div>
    </div>
</div>