@model TravelAgencyService.Models.ViewModels.TripListViewModel

@{
    ViewData["Title"] = "Trip Gallery";
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mb-3" role="alert">
        <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mb-3" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5">
                <i class="bi bi-globe"></i> Explore Our Trips
                <span class="badge bg-primary fs-6">@Model.TotalTrips trips available</span>
            </h1>
        </div>
    </div>

    <div class="row">
        <!-- Filters Sidebar -->
        <div class="col-md-3">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-funnel"></i> Filters</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get" id="filterForm">
                        <!-- Search with Autocomplete -->
                        <div class="mb-3 position-relative">
                            <label class="form-label">Search</label>
                            <div class="input-group">
                                <span class="input-group-text bg-white border-end-0">
                                    <i class="bi bi-search text-muted"></i>
                                </span>
                                <input type="text" 
                                       name="searchQuery" 
                                       id="tripSearchInput"
                                       class="form-control border-start-0 ps-0"
                                       value="@Model.SearchQuery" 
                                       placeholder="Destination, country..."
                                       autocomplete="off">
                            </div>
                            
                            <!-- Search Dropdown Results -->
                            <div id="searchDropdown" 
                                 class="position-absolute w-100 bg-white border rounded-3 shadow-lg mt-1" 
                                 style="z-index: 1050; max-height: 400px; overflow-y: auto; display: none;">
                            </div>
                        </div>

                        <!-- Country -->
                        <div class="mb-3">
                            <label class="form-label">Country</label>
                            <select name="country" class="form-select">
                                <option value="">All Countries</option>
                                @foreach (var c in Model.Countries)
                                {
                                    <option value="@c" selected="@(Model.SelectedCountry == c)">@c</option>
                                }
                            </select>
                        </div>

                        <!-- Destination -->
                        <div class="mb-3">
                            <label class="form-label">Destination</label>
                            <select name="destination" class="form-select">
                                <option value="">All Destinations</option>
                                @foreach (var d in Model.Destinations)
                                {
                                    <option value="@d" selected="@(Model.SelectedDestination == d)">@d</option>
                                }
                            </select>
                        </div>

                        <!-- Package Type -->
                        <div class="mb-3">
                            <label class="form-label">Package Type</label>
                            <select name="packageType" class="form-select">
                                <option value="">All Types</option>
                                @foreach (var pt in Enum.GetValues<TravelAgencyService.Models.PackageType>())
                                {
                                    <option value="@pt" selected="@(Model.SelectedPackageType == pt)">@pt</option>
                                }
                            </select>
                        </div>

                        <!-- Price Range -->
                        <div class="mb-3">
                            <label class="form-label">Price Range ($)</label>
                            <div class="row g-2">
                                <div class="col-6">
                                    <input type="number" name="minPrice" class="form-control"
                                           value="@Model.MinPrice" placeholder="Min">
                                </div>
                                <div class="col-6">
                                    <input type="number" name="maxPrice" class="form-control"
                                           value="@Model.MaxPrice" placeholder="Max">
                                </div>
                            </div>
                        </div>

                        <!-- Date Range -->
                        <div class="mb-3">
                            <label class="form-label">Travel Date</label>
                            <input type="date" name="startDateFrom" class="form-control mb-2"
                                   value="@Model.StartDateFrom?.ToString("yyyy-MM-dd")">
                            <input type="date" name="startDateTo" class="form-control"
                                   value="@Model.StartDateTo?.ToString("yyyy-MM-dd")">
                        </div>

                        <!-- Only Discounted -->
                        <div class="mb-3 form-check">
                            <input type="checkbox" name="onlyDiscounted" value="true"
                                   class="form-check-input" id="onlyDiscounted"
                                   @(Model.OnlyDiscounted ? "checked" : "")>
                            <label class="form-check-label" for="onlyDiscounted">
                                <i class="bi bi-tag text-danger"></i> On Sale Only
                            </label>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-search"></i> Apply Filters
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Clear Filters
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Trip Grid -->
        <div class="col-md-9">
            <!-- Sort Options -->
            <div class="d-flex justify-content-between align-items-center mb-3">
                <p class="mb-0 text-muted">
                    Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) -
                    @(Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalTrips)) of @Model.TotalTrips trips
                </p>
                <div class="d-flex align-items-center">
                    <label class="me-2">Sort by:</label>
                    <select class="form-select form-select-sm" style="width: auto;"
                            onchange="window.location.href='@Url.Action("Index")?sortBy=' + this.value + '&searchQuery=@Model.SearchQuery&country=@Model.SelectedCountry&packageType=@Model.SelectedPackageType'">
                        <option value="date" selected="@(Model.SortBy == "date")">Travel Date</option>
                        <option value="price_asc" selected="@(Model.SortBy == "price_asc")">Price: Low to High</option>
                        <option value="price_desc" selected="@(Model.SortBy == "price_desc")">Price: High to Low</option>
                        <option value="popular" selected="@(Model.SortBy == "popular")">Most Popular</option>
                        <option value="category" selected="@(Model.SortBy == "category")">Category</option>
                    </select>
                </div>
            </div>

            @if (Model.Trips.Any())
            {
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    @foreach (var trip in Model.Trips)
                    {
                        <div class="col">
                            <!-- CLICKABLE CARD (entire card is a link) -->
                            <a asp-action="Details"
                               asp-route-id="@trip.TripId"
                               class="trip-card-link text-decoration-none text-reset d-block">
                                <div class="card h-100 shadow-sm trip-card">
                                    <!-- Trip Image -->
                                    <div class="position-relative">
                                        @if (!string.IsNullOrEmpty(trip.MainImageUrl))
                                        {
                                            <img src="@trip.MainImageUrl" class="card-img-top" alt="@trip.PackageName"
                                                 style="height: 200px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary text-white d-flex align-items-center justify-content-center"
                                                 style="height: 200px;">
                                                <i class="bi bi-image fs-1"></i>
                                            </div>
                                        }

                                        <!-- Badges -->
                                        @if (trip.IsOnSale)
                                        {
                                            <span class="position-absolute top-0 start-0 badge bg-danger m-2">
                                                <i class="bi bi-tag"></i> @($"{trip.DiscountPercentage:0}% OFF")
                                            </span>
                                            <span class="position-absolute top-0 end-0 badge bg-danger m-2">
                                                <i class="bi bi-currency-dollar"></i>
                                                Save $@(trip.OriginalPrice - trip.Price)
                                            </span>
                                        }
                                        @if (trip.IsFullyBooked)
                                        {
                                            <span class="position-absolute top-0 end-0 badge bg-dark m-2">
                                                Fully Booked
                                            </span>
                                        }
                                        <span class="position-absolute bottom-0 start-0 badge bg-primary m-2">
                                            @trip.PackageType
                                        </span>
                                    </div>

                                    <div class="card-body">
                                        <h5 class="card-title">@trip.PackageName</h5>
                                        <p class="card-text text-muted mb-1">
                                            <i class="bi bi-geo-alt"></i> @trip.Destination, @trip.Country
                                        </p>
                                        <p class="card-text text-muted mb-2">
                                            <i class="bi bi-calendar"></i>
                                            @trip.StartDate.ToString("MMM dd") - @trip.EndDate.ToString("MMM dd, yyyy")
                                            <span class="text-primary">(@trip.TripDurationDays days)</span>
                                        </p>

                                        <!-- Price -->
                                        <div class="mb-2">
                                            @if (trip.IsOnSale)
                                            {
                                                <span class="text-decoration-line-through text-muted">$@trip.OriginalPrice</span>
                                                <span class="fs-4 fw-bold text-danger">$@trip.Price</span>
                                            }
                                            else
                                            {
                                                <span class="fs-4 fw-bold text-primary">$@trip.Price</span>
                                            }
                                            <small class="text-muted">/ person</small>
                                        </div>

                                        <!-- Availability - USE AvailableRoomsForPublic -->
                                        <p class="mb-0">
                                            @if (trip.IsFullyBooked)
                                            {
                                                @if (trip.HasPeopleInWaitingList)
                                                {
                                                    <span class="text-warning">
                                                        <i class="bi bi-hourglass-split"></i> 
                                                        @trip.WaitingListCount people waiting
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="text-danger">
                                                        <i class="bi bi-x-circle"></i> No rooms available
                                                    </span>
                                                }
                                            }
                                            else if (trip.AvailableRoomsForPublic <= 3)
                                            {
                                                <span class="text-warning">
                                                    <i class="bi bi-exclamation-circle"></i> 
                                                    Only @trip.AvailableRoomsForPublic rooms left!
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-success">
                                                    <i class="bi bi-check-circle"></i> 
                                                    @trip.AvailableRoomsForPublic rooms available
                                                </span>
                                            }
                                        </p>
                                    </div>

                                    <div class="card-footer bg-white" onclick="event.stopPropagation();">
                                        @* Logic: Show Buy Now/Add to Cart ONLY if rooms available for public *@
                                        @if (!trip.IsFullyBooked)
                                        {
                                            @if (User.Identity?.IsAuthenticated == true)
                                            {
                                                <!-- Room Quantity Selector (Compact Version) -->
                                                <div class="mb-2">
                                                    <div class="input-group input-group-sm">
                                                        <button class="btn btn-outline-secondary room-decrease" type="button" 
                                                                data-trip-id="@trip.TripId">
                                                            <i class="bi bi-dash"></i>
                                                        </button>
                                                        <input type="number" class="form-control text-center room-quantity fw-bold" 
                                                               data-trip-id="@trip.TripId"
                                                               value="1" min="1" max="@trip.AvailableRoomsForPublic" 
                                                               readonly style="max-width: 60px;">
                                                        <button class="btn btn-outline-secondary room-increase" type="button"
                                                                data-trip-id="@trip.TripId">
                                                            <i class="bi bi-plus"></i>
                                                        </button>
                                                        <span class="input-group-text bg-light">
                                                            <small class="room-label" data-trip-id="@trip.TripId">room</small>
                                                        </span>
                                                    </div>
                                                </div>

                                                <!-- Action Buttons -->
                                                <div class="d-grid gap-2">
                                                    <a href="#" class="btn btn-success btn-buy-now"
                                                       data-trip-id="@trip.TripId"
                                                       data-base-url="@Url.Action("BuyNow", "Cart")">
                                                        <i class="bi bi-lightning"></i> Buy Now
                                                    </a>
                                                    <a href="#" class="btn btn-primary btn-add-cart"
                                                       data-trip-id="@trip.TripId"
                                                       data-base-url="@Url.Action("Add", "Cart")">
                                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                                    </a>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="d-grid gap-2">
                                                    <a asp-controller="Account" asp-action="Login"
                                                       asp-route-returnUrl="@Url.Action("BuyNow", "Cart", new { id = trip.TripId })"
                                                       class="btn btn-success">
                                                        <i class="bi bi-lightning"></i> Buy Now
                                                    </a>
                                                    <a asp-controller="Account" asp-action="Login"
                                                       asp-route-returnUrl="@Url.Action("Add", "Cart", new { id = trip.TripId })"
                                                       class="btn btn-primary">
                                                        <i class="bi bi-cart-plus"></i> Add to Cart
                                                    </a>
                                                </div>
                                            }
                                        }
                                        else
                                        {
                                            @* Show Join Waiting List if fully booked for public *@
                                            @if (User.Identity?.IsAuthenticated == true)
                                            {
                                                <form asp-controller="WaitingList" asp-action="Join" method="post">
                                                    @Html.AntiForgeryToken()
                                                    <input type="hidden" name="tripId" value="@trip.TripId" />
                                                    <button type="submit" class="btn btn-warning w-100">
                                                        <i class="bi bi-hourglass"></i> Join Waiting List
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <a asp-controller="Account" asp-action="Login"
                                                   asp-route-returnUrl="@Url.Action("Details", "Trip", new { id = trip.TripId })"
                                                   class="btn btn-warning w-100">
                                                    <i class="bi bi-hourglass"></i> Join Waiting List
                                                </a>
                                            }
                                        }
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.TotalPages > 1)
                {
                    <nav class="mt-4">
                        <ul class="pagination justify-content-center">
                            <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-page="@(Model.CurrentPage - 1)"
                                   asp-route-searchQuery="@Model.SearchQuery"
                                   asp-route-country="@Model.SelectedCountry"
                                   asp-route-sortBy="@Model.SortBy">Previous</a>
                            </li>
                            @for (int i = 1; i <= Model.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" asp-action="Index"
                                       asp-route-page="@i"
                                       asp-route-searchQuery="@Model.SearchQuery"
                                       asp-route-country="@Model.SelectedCountry"
                                       asp-route-sortBy="@Model.SortBy">@i</a>
                                </li>
                            }
                            <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                                <a class="page-link" asp-action="Index"
                                   asp-route-page="@(Model.CurrentPage + 1)"
                                   asp-route-searchQuery="@Model.SearchQuery"
                                   asp-route-country="@Model.SelectedCountry"
                                   asp-route-sortBy="@Model.SortBy">Next</a>
                            </li>
                        </ul>
                    </nav>
                }
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-search fs-1 text-muted"></i>
                    <h3 class="mt-3">No trips found</h3>
                    <p class="text-muted">Try adjusting your filters or search query.</p>
                    <a asp-action="Index" class="btn btn-primary">View All Trips</a>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .trip-card {
        transition: transform 0.2s, box-shadow 0.2s;
        cursor: pointer;
    }

    .trip-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15) !important;
    }

    .trip-card-link {
        display: block;
    }

    .trip-card-link:hover {
        text-decoration: none;
    }

    /* Prevent button clicks from triggering card link */
    .trip-card .btn,
    .trip-card form,
    .trip-card .input-group,
    .trip-card .card-footer {
        position: relative;
        z-index: 10;
    }
    
    .trip-card .room-quantity {
        pointer-events: none;
    }

    /* Search dropdown styles */
    #searchDropdown {
        border: 1px solid #e0e0e0;
    }
    
    #searchDropdown::-webkit-scrollbar {
        width: 6px;
    }
    
    #searchDropdown::-webkit-scrollbar-track {
        background: #f1f1f1;
    }
    
    #searchDropdown::-webkit-scrollbar-thumb {
        background: #ccc;
        border-radius: 3px;
    }

    .search-result-item:hover {
        background: #f0f7ff !important;
    }

    .form-control:focus, .form-select:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.2rem rgba(13, 110, 253, 0.15);
    }
</style>

@section Scripts {
<script>
document.addEventListener('DOMContentLoaded', function() {
    // =============================================
    // SEARCH AUTOCOMPLETE FUNCTIONALITY
    // =============================================
    const searchInput = document.getElementById('tripSearchInput');
    const searchDropdown = document.getElementById('searchDropdown');
    const filterForm = document.getElementById('filterForm');
    let searchTimeout;

    // Fetch search results from server
    async function fetchSearchResults(query) {
        try {
            const response = await fetch(`/Trip/Search?query=${encodeURIComponent(query)}`);
            if (response.ok) {
                return await response.json();
            }
        } catch (error) {
            console.error('Search error:', error);
        }
        return [];
    }

    // Show search results in dropdown
    function showSearchResults(results, query) {
        if (results.length === 0 && query.length > 0) {
            searchDropdown.innerHTML = `
                <div class="p-3 text-center">
                    <i class="bi bi-search text-muted mb-2 d-block" style="font-size: 1.5rem;"></i>
                    <span class="text-muted">No destinations found for "${query}"</span>
                </div>
            `;
            searchDropdown.style.display = 'block';
            return;
        }

        if (results.length === 0) {
            searchDropdown.style.display = 'none';
            return;
        }

        searchDropdown.innerHTML = results.map(trip => `
            <div class="search-result-item p-2 border-bottom" 
                 data-trip-id="${trip.tripId}" 
                 data-destination="${trip.destination}"
                 data-country="${trip.country}"
                 style="cursor: pointer; transition: background 0.2s;">
                <div class="d-flex align-items-center">
                    <div class="me-3" style="width: 60px; height: 45px; flex-shrink: 0;">
                        ${trip.mainImageUrl 
                            ? `<img src="${trip.mainImageUrl}" class="rounded" style="width: 100%; height: 100%; object-fit: cover;" alt="${trip.packageName}">` 
                            : `<div class="rounded bg-light d-flex align-items-center justify-content-center h-100"><i class="bi bi-image text-muted"></i></div>`
                        }
                    </div>
                    <div class="flex-grow-1">
                        <div class="fw-semibold" style="font-size: 0.9rem;">${trip.destination}</div>
                        <small class="text-muted">${trip.country}</small>
                    </div>
                    <div class="text-end">
                        <span class="fw-bold text-primary">$${trip.price}</span>
                    </div>
                </div>
            </div>
        `).join('');
        
        searchDropdown.style.display = 'block';
        attachSearchResultListeners();
    }

    // Attach click listeners to search results
    function attachSearchResultListeners() {
        document.querySelectorAll('.search-result-item').forEach(item => {
            item.addEventListener('click', function() {
                const tripId = this.dataset.tripId;
                window.location.href = `/Trip/Details/${tripId}`;
            });
        });
    }

    // Search input events
    searchInput.addEventListener('input', function() {
        const query = this.value.trim();
        
        clearTimeout(searchTimeout);
        
        if (query.length < 2) {
            searchDropdown.style.display = 'none';
            return;
        }

        // Debounce search requests
        searchTimeout = setTimeout(async () => {
            const results = await fetchSearchResults(query);
            showSearchResults(results, query);
        }, 300);
    });

    // Show dropdown on focus if there's a query
    searchInput.addEventListener('focus', async function() {
        const query = this.value.trim();
        if (query.length >= 2) {
            const results = await fetchSearchResults(query);
            showSearchResults(results, query);
        }
    });

    // Close dropdown when clicking outside
    document.addEventListener('click', function(e) {
        if (!searchInput.contains(e.target) && !searchDropdown.contains(e.target)) {
            searchDropdown.style.display = 'none';
        }
    });

    // Keyboard navigation
    searchInput.addEventListener('keydown', function(e) {
        if (e.key === 'Escape') {
            searchDropdown.style.display = 'none';
        }
        if (e.key === 'Enter') {
            searchDropdown.style.display = 'none';
        }
    });

    // =============================================
    // ROOM QUANTITY SELECTOR FUNCTIONALITY
    // =============================================
    
    // Handle decrease button
    document.querySelectorAll('.room-decrease').forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            const tripId = this.dataset.tripId;
            const input = document.querySelector(`.room-quantity[data-trip-id="${tripId}"]`);
            let value = parseInt(input.value);
            
            if (value > 1) {
                input.value = value - 1;
                updateRoomLabel(tripId, value - 1);
                updateButtonUrls(tripId);
            }
        });
    });

    // Handle increase button
    document.querySelectorAll('.room-increase').forEach(btn => {
        btn.addEventListener('click', function(e) {
            e.preventDefault();
            e.stopPropagation();
            const tripId = this.dataset.tripId;
            const input = document.querySelector(`.room-quantity[data-trip-id="${tripId}"]`);
            const max = parseInt(input.max);
            let value = parseInt(input.value);
            
            if (value < max) {
                input.value = value + 1;
                updateRoomLabel(tripId, value + 1);
                updateButtonUrls(tripId);
            }
        });
    });

    // Update room label (singular/plural)
    function updateRoomLabel(tripId, quantity) {
        const label = document.querySelector(`.room-label[data-trip-id="${tripId}"]`);
        if (label) {
            label.textContent = quantity === 1 ? 'room' : 'rooms';
        }
    }

    // Update button URLs with selected room quantity
    function updateButtonUrls(tripId) {
        const input = document.querySelector(`.room-quantity[data-trip-id="${tripId}"]`);
        const rooms = input.value;
        
        // Update Buy Now button
        const buyNowBtn = document.querySelector(`.btn-buy-now[data-trip-id="${tripId}"]`);
        if (buyNowBtn) {
            const baseUrl = buyNowBtn.dataset.baseUrl;
            buyNowBtn.href = `${baseUrl}?id=${tripId}&rooms=${rooms}`;
        }
        
        // Update Add to Cart button
        const addCartBtn = document.querySelector(`.btn-add-cart[data-trip-id="${tripId}"]`);
        if (addCartBtn) {
            const baseUrl = addCartBtn.dataset.baseUrl;
            addCartBtn.href = `${baseUrl}?id=${tripId}&rooms=${rooms}`;
        }
    }

    // Initialize all button URLs
    document.querySelectorAll('.room-quantity').forEach(input => {
        const tripId = input.dataset.tripId;
        updateButtonUrls(tripId);
    });
});
</script>
}
