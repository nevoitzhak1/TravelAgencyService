@model TravelAgencyService.Models.ViewModels.MyBookingsViewModel

@{
    ViewData["Title"] = "My Bookings";
}

<div class="container">
    <h1 class="mb-4"><i class="bi bi-calendar-check"></i> My Bookings</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@Model.UpcomingBookings.Count</h3>
                    <p class="mb-0">Upcoming Trips</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@Model.PastBookings.Count(b => b.Status != TravelAgencyService.Models.BookingStatus.Cancelled)</h3>
                    <p class="mb-0">Completed Trips</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-dark">
                <div class="card-body text-center">
                    <h3>@Model.WaitingListEntries.Count</h3>
                    <p class="mb-0">In Waiting List</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-secondary text-white">
                <div class="card-body text-center">
                    <h3>@Model.TotalBookings</h3>
                    <p class="mb-0">Total Bookings</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Bookings -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0"><i class="bi bi-airplane"></i> Upcoming Trips</h5>
        </div>
        <div class="card-body">
            @if (Model.UpcomingBookings.Any())
            {
                <div class="row">
                    @foreach (var booking in Model.UpcomingBookings)
                    {
                        <div class="col-md-6 mb-4">
                            <div class="card h-100 shadow-sm">
                                <div class="row g-0">
                                    <div class="col-4">
                                        @if (!string.IsNullOrEmpty(booking.MainImageUrl))
                                        {
                                            <img src="@booking.MainImageUrl" class="img-fluid rounded-start h-100"
                                                 style="object-fit: cover;" alt="@booking.PackageName">
                                        }
                                        else
                                        {
                                            <div class="bg-secondary h-100 d-flex align-items-center justify-content-center rounded-start">
                                                <i class="bi bi-image text-white fs-1"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-8">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between">
                                                <h5 class="card-title">@booking.PackageName</h5>
                                                @switch (booking.Status)
                                                {
                                                    case TravelAgencyService.Models.BookingStatus.Confirmed:
                                                        <span class="badge bg-success">Confirmed</span>
                                                        break;
                                                    case TravelAgencyService.Models.BookingStatus.Pending:
                                                        <span class="badge bg-warning text-dark">Pending Payment</span>
                                                        break;
                                                }
                                            </div>
                                            <p class="card-text text-muted mb-1">
                                                <i class="bi bi-geo-alt"></i> @booking.Destination, @booking.Country
                                            </p>
                                            <p class="card-text mb-1">
                                                <i class="bi bi-calendar"></i>
                                                @booking.StartDate.ToString("MMM dd") - @booking.EndDate.ToString("MMM dd, yyyy")
                                            </p>
                                            <p class="card-text mb-1">
                                                <i class="bi bi-door-open"></i> @booking.NumberOfRooms room(s)
                                            </p>
                                            <p class="card-text mb-2">
                                                <strong>Total: $@booking.TotalPrice</strong>
                                                @if (booking.IsPaid)
                                                {
                                                    <span class="badge bg-success ms-2">Paid</span>
                                                }
                                            </p>

                                            @if (booking.DaysUntilDeparture.HasValue)
                                            {
                                                <div class="alert alert-info py-1 px-2 mb-2">
                                                    <small><i class="bi bi-clock"></i> @booking.DaysUntilDeparture days until departure</small>
                                                </div>
                                            }

                                            <div class="btn-group btn-group-sm">
                                                @if (booking.Status == TravelAgencyService.Models.BookingStatus.Pending)
                                                {
                                                    <a asp-controller="Payment" asp-action="Checkout" asp-route-bookingId="@booking.BookingId"
                                                       class="btn btn-primary">
                                                        <i class="bi bi-credit-card"></i> Pay Now
                                                    </a>
                                                }
                                                @if (booking.IsPaid)
                                                {
                                                    <a asp-action="DownloadItinerary" asp-route-id="@booking.BookingId"
                                                       class="btn btn-outline-primary">
                                                        <i class="bi bi-download"></i> Itinerary
                                                    </a>
                                                }
                                                @if (booking.CanBeCancelled)
                                                {
                                                    <a asp-action="Cancel" asp-route-id="@booking.BookingId"
                                                       class="btn btn-outline-danger">
                                                        <i class="bi bi-x-circle"></i> Cancel
                                                    </a>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <i class="bi bi-calendar-x fs-1 text-muted"></i>
                    <p class="mt-2 text-muted">You don't have any upcoming trips.</p>
                    <a asp-controller="Trip" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-search"></i> Browse Trips
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Waiting List Section -->
    <div class="card mb-4">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center"
             style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#waitingListCollapse">
            <h5 class="mb-0"><i class="bi bi-hourglass-split"></i> Waiting List (@Model.WaitingListEntries.Count)</h5>
            <i class="bi bi-chevron-down" id="waitingListIcon"></i>
        </div>
        <div class="collapse @(Model.ShowWaitingList || Model.WaitingListEntries.Any(w => w.IsNotified) ? "show" : "")" id="waitingListCollapse">
            <div class="card-body">
                @if (Model.WaitingListEntries.Any())
                {
                    <div class="row">
                        @foreach (var entry in Model.WaitingListEntries)
                        {
                            <div class="col-md-6 mb-4">
                                <div class="card h-100 shadow-sm @(entry.IsNotified ? "border-success border-2" : "")">
                                    <div class="row g-0">
                                        <div class="col-4">
                                            @if (!string.IsNullOrEmpty(entry.MainImageUrl))
                                            {
                                                <img src="@entry.MainImageUrl" class="img-fluid rounded-start h-100"
                                                     style="object-fit: cover;" alt="@entry.PackageName">
                                            }
                                            else
                                            {
                                                <div class="bg-secondary h-100 d-flex align-items-center justify-content-center rounded-start">
                                                    <i class="bi bi-image text-white fs-1"></i>
                                                </div>
                                            }
                                        </div>
                                        <div class="col-8">
                                            <div class="card-body">
                                                <div class="d-flex justify-content-between align-items-start">
                                                    <h5 class="card-title">@entry.PackageName</h5>
                                                    @if (entry.IsNotified)
                                                    {
                                                        <span class="badge bg-success">Your Turn!</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-secondary">Position #@entry.Position</span>
                                                    }
                                                </div>
                                                <p class="card-text text-muted mb-1">
                                                    <i class="bi bi-geo-alt"></i> @entry.Destination, @entry.Country
                                                </p>
                                                <p class="card-text mb-1">
                                                    <i class="bi bi-calendar"></i>
                                                    @entry.StartDate.ToString("MMM dd") - @entry.EndDate.ToString("MMM dd, yyyy")
                                                </p>
                                                <p class="card-text mb-2">
                                                    <i class="bi bi-door-open"></i> @entry.RoomsRequested room(s) requested
                                                </p>

                                                @if (entry.CanBook)
                                                {
                                                    <div class="alert alert-success py-2 px-3 mb-2">
                                                        <small><i class="bi bi-clock"></i> <strong>@entry.TimeRemaining</strong> to book</small>
                                                    </div>
                                                    <a asp-action="Book" asp-route-id="@entry.TripId" class="btn btn-success btn-sm">
                                                        <i class="bi bi-check-circle"></i> Book Now
                                                    </a>
                                                }
                                                else
                                                {
                                                    <p class="card-text text-muted mb-2">
                                                        <small><i class="bi bi-clock-history"></i> Joined: @entry.JoinedDate.ToString("MMM dd, yyyy")</small>
                                                    </p>
                                                }

                                                <form asp-action="LeaveWaitingList" asp-route-id="@entry.WaitingListEntryId" method="post" class="d-inline">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger btn-sm"
                                                            onclick="return confirm('Are you sure you want to leave the waiting list?');">
                                                        <i class="bi bi-x-circle"></i> Leave
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="bi bi-hourglass fs-1 text-muted"></i>
                        <p class="mt-2 text-muted">You're not on any waiting lists.</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Completed Trips -->
    <div class="card mb-4">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center"
             style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#completedCollapse">
            <h5 class="mb-0"><i class="bi bi-check-circle"></i> Completed Trips</h5>
            <i class="bi bi-chevron-down" id="completedIcon"></i>
        </div>
        <div class="collapse @(Model.ShowPastBookings ? "show" : "")" id="completedCollapse">
            <div class="card-body">
                @{
                    var completedTrips = Model.PastBookings.Where(b => b.Status != TravelAgencyService.Models.BookingStatus.Cancelled).ToList();
                }
                @if (completedTrips.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Trip</th>
                                    <th>Dates</th>
                                    <th>Rooms</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in completedTrips)
                                {
                                    <tr>
                                        <td>
                                            <strong>@booking.PackageName</strong><br>
                                            <small class="text-muted">@booking.Destination, @booking.Country</small>
                                        </td>
                                        <td>@booking.StartDate.ToString("MMM dd") - @booking.EndDate.ToString("MMM dd, yyyy")</td>
                                        <td>@booking.NumberOfRooms</td>
                                        <td>$@booking.TotalPrice</td>
                                        <td>
                                            <span class="badge bg-success">Completed</span>
                                        </td>
                                        <td>
                                            @if (!booking.HasReviewed)
                                            {
                                                <a asp-controller="Review" asp-action="CreateTripReview" asp-route-tripId="@booking.TripId"
                                                   class="btn btn-sm btn-outline-primary">
                                                    <i class="bi bi-star"></i> Review
                                                </a>
                                            }
                                            else
                                            {
                                                <span class="text-success"><i class="bi bi-check-circle"></i> Reviewed</span>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No completed trips yet.</p>
                }
            </div>
        </div>
    </div>

    <!-- Cancelled Bookings -->
    <div class="card">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center"
             style="cursor: pointer;" data-bs-toggle="collapse" data-bs-target="#cancelledCollapse">
            <h5 class="mb-0"><i class="bi bi-x-circle"></i> Cancelled Bookings</h5>
            <i class="bi bi-chevron-down" id="cancelledIcon"></i>
        </div>
        <div class="collapse @(Model.ShowCancelledBookings ? "show" : "")" id="cancelledCollapse">
            <div class="card-body">
                @{
                    var cancelledTrips = Model.PastBookings.Where(b => b.Status == TravelAgencyService.Models.BookingStatus.Cancelled).ToList();
                }
                @if (cancelledTrips.Any())
                {
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Trip</th>
                                    <th>Dates</th>
                                    <th>Rooms</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var booking in cancelledTrips)
                                {
                                    <tr class="table-light">
                                        <td>
                                            <strong>@booking.PackageName</strong><br>
                                            <small class="text-muted">@booking.Destination, @booking.Country</small>
                                        </td>
                                        <td>@booking.StartDate.ToString("MMM dd") - @booking.EndDate.ToString("MMM dd, yyyy")</td>
                                        <td>@booking.NumberOfRooms</td>
                                        <td>$@booking.TotalPrice</td>
                                        <td>
                                            <span class="badge bg-danger">Cancelled</span>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-muted text-center py-3">No cancelled bookings.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Smooth collapse animation with icon toggle
        document.querySelectorAll('[data-bs-toggle="collapse"]').forEach(function(element) {
            var targetId = element.getAttribute('data-bs-target');
            var target = document.querySelector(targetId);
            var icon = element.querySelector('i.bi-chevron-down, i.bi-chevron-up');

            if (target && icon) {
                target.addEventListener('show.bs.collapse', function () {
                    icon.classList.remove('bi-chevron-down');
                    icon.classList.add('bi-chevron-up');
                });

                target.addEventListener('hide.bs.collapse', function () {
                    icon.classList.remove('bi-chevron-up');
                    icon.classList.add('bi-chevron-down');
                });
            }
        });
    </script>
}