@model TravelAgencyService.Models.ViewModels.CreateBookingViewModel

@{
    ViewData["Title"] = "Book Trip";
}

<div class="container">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Trip" asp-action="Index">Trips</a></li>
            <li class="breadcrumb-item"><a asp-controller="Trip" asp-action="Details" asp-route-id="@Model.TripId">@Model.PackageName</a></li>
            <li class="breadcrumb-item active">Book</li>
        </ol>
    </nav>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["Error"]
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="bi bi-calendar-plus"></i> Book Your Trip</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Book" method="post">
                        <input type="hidden" asp-for="TripId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <!-- Trip Summary -->
                        <div class="card mb-4">
                            <div class="row g-0">
                                <div class="col-md-4">
                                    @if (!string.IsNullOrEmpty(Model.MainImageUrl))
                                    {
                                        <img src="@Model.MainImageUrl" class="img-fluid rounded-start h-100"
                                             style="object-fit: cover;" alt="@Model.PackageName">
                                    }
                                    else
                                    {
                                        <div class="bg-secondary h-100 d-flex align-items-center justify-content-center rounded-start"
                                             style="min-height: 150px;">
                                            <i class="bi bi-image text-white fs-1"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@Model.PackageName</h5>
                                        <p class="card-text mb-1">
                                            <i class="bi bi-geo-alt text-danger"></i> @Model.Destination, @Model.Country
                                        </p>
                                        <p class="card-text mb-1">
                                            <i class="bi bi-calendar text-primary"></i>
                                            @Model.StartDate.ToString("MMM dd") - @Model.EndDate.ToString("MMM dd, yyyy")
                                            <span class="badge bg-info">@Model.TripDurationDays days</span>
                                        </p>
                                        <p class="card-text mb-1">
                                            <span class="badge bg-primary">@Model.PackageType</span>
                                            @if (Model.MinimumAge.HasValue || Model.MaximumAge.HasValue)
                                            {
                                                <span class="badge bg-secondary">
                                                    Ages @(Model.MinimumAge ?? 0) - @(Model.MaximumAge?.ToString() ?? "∞")
                                                </span>
                                            }
                                        </p>
                                        <p class="card-text">
                                            @if (Model.IsOnSale)
                                            {
                                                <span class="text-decoration-line-through text-muted">$@Model.OriginalPrice</span>
                                                <span class="fs-5 fw-bold text-danger">$@Model.PricePerPerson</span>
                                            }
                                            else
                                            {
                                                <span class="fs-5 fw-bold text-primary">$@Model.PricePerPerson</span>
                                            }
                                            <small class="text-muted">/ person</small>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Room Selection -->
                        <div class="mb-4">
                            <label asp-for="NumberOfRooms" class="form-label fw-bold"></label>
                            <select asp-for="NumberOfRooms" class="form-select" id="roomSelect" onchange="updateTotal()">
                                @for (int i = 1; i <= Math.Min(Model.AvailableRooms, 10); i++)
                                {
                                    <option value="@i">@i room(s)</option>
                                }
                            </select>
                            <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
                            <small class="text-muted">@Model.AvailableRooms rooms available</small>
                        </div>

                        <!-- Price Breakdown -->
                        <div class="card bg-light mb-4">
                            <div class="card-body">
                                <h5 class="card-title">Price Breakdown</h5>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Price per person:</span>
                                    <span>$@Model.PricePerPerson</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Number of rooms:</span>
                                    <span id="roomCount">1</span>
                                </div>
                                <hr />
                                <div class="d-flex justify-content-between fw-bold fs-5">
                                    <span>Total:</span>
                                    <span class="text-primary" id="totalPrice">$@Model.PricePerPerson</span>
                                </div>
                            </div>
                        </div>

                        <!-- Important Info -->
                        <div class="alert alert-info">
                            <h6><i class="bi bi-info-circle"></i> Important Information</h6>
                            <ul class="mb-0 small">
                                <li>You can book up to 3 upcoming trips at a time</li>
                                <li>Payment is required to confirm your booking</li>
                                <li>Free cancellation up to 7 days before departure</li>
                                <li>Itinerary will be available after payment</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-controller="Trip" asp-action="Details" asp-route-id="@Model.TripId"
                               class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Details
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-credit-card"></i> Proceed to Payment
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-md-4">
            <div class="card shadow">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-shield-check"></i> Booking Protection</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2"><i class="bi bi-check-circle text-success"></i> Secure SSL Payment</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success"></i> Instant Confirmation</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success"></i> Free Cancellation</li>
                        <li class="mb-2"><i class="bi bi-check-circle text-success"></i> 24/7 Support</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        var pricePerPerson = @Model.PricePerPerson;

        function updateTotal() {
            var rooms = document.getElementById('roomSelect').value;
            var total = pricePerPerson * rooms;
            document.getElementById('roomCount').textContent = rooms;
            document.getElementById('totalPrice').textContent = '$' + total.toFixed(2);
        }
    </script>
}